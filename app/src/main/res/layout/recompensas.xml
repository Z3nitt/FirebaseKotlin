<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/fondos_beige">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen de la recompensa -->
        <ImageView
            android:id="@+id/imagenPortada"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:backgroundTint="@color/fondos_azulcelest"
            android:contentDescription="Imagen de la recompensa"/>

        <!-- Información de la recompensa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Título de la recompensa -->
            <TextView
                android:id="@+id/textoSuperior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Nombre de la recompensa"
                android:textColor="@color/textos_azulosc"
                android:layout_marginBottom="4dp" />

            <!-- Descripción de la recompensa -->
            <TextView
                android:id="@+id/textoInferior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/textos_azulosc"
                android:text="Descripción de la recompensa"
                android:layout_marginBottom="12dp" />

            <!-- Botón para adquirir la recompensa -->
            <Button
                android:id="@+id/botonAccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adquirir"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/botones_naranja"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
